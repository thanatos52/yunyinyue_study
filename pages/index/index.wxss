/* pages/index/index.wxss */
.indexContainer {
  flex: auto;
}
/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 五个图标区域 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%; 
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
  padding: 20rpx; 
}

.recommendContainer .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .more {
  float: right;
  font-size: 24rpx;
  border: 1rpx;
  border-style: solid;
  border-color: #333;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

/* 滚动区域 */
.recommendScroll {
  display: flex;
}

.scrollItem {
  width: 200rpx;
  margin-right: 10rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}