/* pages/index/index.wxss */

/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 五个图标区域 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%; 
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
  padding: 20rpx; 
}

.recommendContainer .header {
  padding-bottom: 20rpx;
}

.recommendContainer .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .more {
  float: right;
  font-size: 24rpx;
  border: 1rpx;
  border-style: solid;
  border-color: #333;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

/* 内容区域 */
.recommendScroll {
  display: flex;
  height: 280rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出隐藏，省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出隐藏，省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;  /* 设置对其模式 */
  -webkit-line-clamp: 2;/* 设置多行的行数 */
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}